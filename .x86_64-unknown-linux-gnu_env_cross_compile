# Darwinia Builder:
# https://github.com/AurevoirXavier/darwinia-builder

# Manually:
# cross compile toolchain
brew tap SergioBenitez/osxct
brew install x86_64-unknown-linux-gnu
# linker
export TARGET_CC="x86_64-unknown-linux-gnu-gcc"
# linux lib
export SYSROOT=/path/to/sysroot
# openssl headers
export OPENSSL_INCLUDE_DIR=/path/to/openssl/include
# openssl lib
export OPENSSL_LIB_DIR=/path/to/openssl/lib
# rocksdb lib
export ROCKSDB_LIB_DIR=/path/to/rocksdb/lib
# build
cargo rustc --release --target=x86_64-unknown-linux-gnu -- --C link_args="--sysroot=$SYSROOT"